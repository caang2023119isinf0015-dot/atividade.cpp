/* 4.-Crie um programa que:
    Possua um vetor de 5 números inteiros
    Peça ao usuário para digitar os valores
    Exiba todos os valores digitados */

#include <iostream>

int main(){
    int valores[5];

    for (int i = 0; i < 5; i++) {
    std::cout << "Digite o " << i + 1 << "º número" << std::endl;
    std::cin >> valores[i];
    }

    std::cout << "Os valores digitados são:" << std::endl;
    for (int i = 0; i < 5; i++) {
        std::cout << valores[i] << ',';
    }
}
