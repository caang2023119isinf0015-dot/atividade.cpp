5.


/* -Usando o vetor do exercício anterior, calcule e exiba:
    A soma total dos números
    A média aritmética dos valores */

#include <iostream>

int main(){
    int valores[5];
    float soma = 0;
    float media = 0;

    for (int i = 0; i < 5; i++) {
    std::cout << "Digite o " << i + 1 << "º número" << std::endl;
    std::cin >> valores[i];
    }

    std::cout << "Os valores digitados são:" << std::endl;
    for (int i = 0; i < 5; i++) {
        std::cout << valores[i] << ',';
    }
    
   for (int i = 0; i < 5; i++) {
        soma += valores[i];
   }

    media = soma/5;

    std::cout << "\n A Soma é:" << soma << " e a média é:" << media << std::endl;

}
