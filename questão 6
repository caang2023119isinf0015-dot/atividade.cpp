6.

#include <iostream>

int main(){
    int num[8];

    for (int i = 0; i < 8; i++) {
    std::cout << "Digite o " << i + 1 << "º número: ";
    std::cin >> num[i];
    }

    int maior_num = num[0];
    int menor_num = num[0];

    int pos_maior = 0;
    int pos_menor = 0;

    for (int i = 1; i < 8; i++) {
        if (num[i] > maior) {
            maior_num = num[i];
            pos_maior = i;
        }
        if (num[i] < menor) {
            menor_num = num[i];
            pos_menor = i;
        }
    }
}
